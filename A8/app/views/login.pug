html
  style.
    .button {
    width: 30%;
    font-size: 20px;
    text-align: center;
    margin: 20px;
    cursor: pointer;
    outline: none;
    color: #fff;
    background-color: #0EEBD9;
    border: 15px;
    border-radius: 15px;
    box-shadow: 0 9px #999;
    }
    .button:hover {background-color: #3e8e41}
    .button:active {
    background-color: #3e8e41;
    box-shadow: 0 5px #666;
    transform: translateY(4px);
    }
