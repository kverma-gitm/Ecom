doctype html
html(lang='en')
  head
    title Profile
    style.
      body
      {
      font-family: 'Open Sans', sans-serif;
      }
      .button {
      background-color: #4CAF50; /* Green */
      border: none;
      color: white;
      padding: 15px 32px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      -webkit-transition-duration: 0.4s; /* Safari */
      transition-duration: 0.4s;
      }
      .button2:hover {
      box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
      }
      .fb-profile img.fb-image-lg{
      z-index: 0;
      width: 100%;
      margin-bottom: 10px;
      }
      .fb-image-profile
      {
      

      z-index: 9;
      width: 20%;
      border-radius: 50%;
      }
      @media (max-width:768px)
      {
      .fb-profile-text{
      font-weight: 700;
      font-size:5px;
      text-align:right;
      margin-left: 10%;
      }
      /* Add padding to container elements */
      .container {
        padding: 16px;
        width: 30%;
        text-align:left;
        margin-top:50%;
      }
      .fb-image-profile
      {
      margin: -45px 10px 0px 25px;
      z-index: 9;
      width: 20%;
      }
      }
  body(background='http://www.wallcoo.net/cartoon/abstract_colors_10_1920x1200/wallpapers/1920x1080/abstract_color_and_lights_deviant_skyblue.jpg')
    #container.col
      link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
      .container
        .fb-profile
          
          img.fb-image-profile.thumbnail(align='center')
          .fb-profile-text
            h2 Username : #{user.userName}(Plz Remember Your username so that you can login next time)
            h2 Name : #{user.firstName+" "+user.lastName}
            h2 Email : #{user.email}
            h2 From : #{user.country}
            button.button.button2
              a(href='http://localhost:3000/users/logout/screen') Logout
            button.button.button2
              a(href='http://localhost:3000/users/products') Products
            button.button.button2
              a(href='http://localhost:3000/users/cart/'+user.userName) Cart
        // /container

